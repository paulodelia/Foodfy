<!DOCTYPE html>

<html>

    <head>

        {% block head %}
            <title>Foodfy</title>
        {% endblock %}

        <link rel="stylesheet" href="/style.css">

    </head>

    <body>
        <header>
            <a href="/"><img src="assets/logo.png" alt="Logo do Foodfy" id="logo"></a>
            <a href="/sobre">Sobre</a>
            <a href="/receitas">Receitas</a>
        </header>

        {% block content %}{% endblock %}

        {% block cards %}
            <div class="cards">
                {% for item in items %}
                    <div class="card">
                        <img src="{{ item.image }}" alt="{{ item.title }}">
                        <h1>{{ item.title }}</h1>
                        <p>por
                            {{ item.author }}</p>
                    </div>
                {% endfor %}
            </div>

            <div class="modal-overlay">
                <div class="modal">
                    <img id="modal-img" src="" alt="">
                    <h1 id="modal-title"></h1>
                    <p id="modal-author"></p>
                    <p id="modal-exit">Fechar</p>
                </div>
            </div>

            <script src="scripts.js"></script>
        {% endblock %}

        <footer>
            <p>Todos direitos reservados, receitas Foodfy.</p>
        </footer>
    </body>

</html>