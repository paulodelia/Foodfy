<div class="item">
    <h2>Imagem da receita</h2>
    <input type="url" name="image" value="{{recipes.image}}">
</div>

<div class="item">
    <h2>Título da receita</h2>
    <input type="text" name="title" value="{{recipes.title}}">
</div>

<div class="item">
    <h2>Autor</h2>
    <input type="text" name="author" value="{{recipes.author}}">
</div>

<div class="item" id="ingredients">
    <h2>Ingredientes</h2>

    {% if recipes.ingredients.length > 0 %}
        {% for ingredient in recipes.ingredients %}
            <div class="ingredient">
                <input type="text" name="ingredients[]" value="{{ingredient}}">
            </div>
        {% endfor %}
    {% else %}
        <div class="ingredient">
            <input type="text" name="ingredients[]">
        </div>
    {% endif %}

</div>
<p class="add-btn" id="add-ingredient">Adicionar novo ingrediente</p>

<div class="item" id="preparation">
    <h2>Modo de preparo</h2>
    {% if recipes.preparation.length > 0 %}
        {% for step in recipes.preparation %}
            <div class="step">
                <input type="text" name="preparation[]" value="{{step}}">
            </div>
        {% endfor %}
    {% else %}
        <div class="step">
            <input type="text" name="preparation[]">
        </div>
    {% endif %}

</div>
<p class="add-btn" id="add-step">Adicionar novo passo</p>

<div class="item" id="information">
    <h2>Informações adicionais</h2>
    <textarea name="information" cols="30" rows="10">{{recipes.information}}</textarea>
</div>