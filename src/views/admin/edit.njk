{% extends "admin/layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}
    <section id="edit-section">
        <h1>Editando receita</h1>
        <form class="delete-form" method="POST" action="/admin/recipes/?_method=DELETE">
            <button>Deletar</button>
            <input type="hidden" name="id" value="{{recipeIndex}}">
        </form>
        <form class="edit-form" method="POST" action="/admin/recipes/?_method=PUT">
            <button>Salvar receita</button>
            <section class="fields">
                {% include 'admin/fields.njk' %}
            </section>
            <input type="hidden" name="id" value="{{recipeIndex}}">
        </form>
    </section>
    <div id="end"></div>
    <script src="/admin.js"></script>

{% endblock %}