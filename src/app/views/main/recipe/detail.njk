{% extends "main/layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}
    <div class="card recipe">
        <img src="{{ files[0].src }}" alt="{{ recipe.title }}">
        <div class="preview-gallery">
                {%for file in files%}
                    <img src="{{file.src}}" alt="recipe.name" {% if loop.index0 == 0 %} class="active" {% endif %} onclick="ImageGallery.setImage(event)">
                {% endfor %}
            </div>
        <h1>{{ recipe.title }}</h1>
        <a href="/chefs/{{recipe.chef_id}}"><p>por {{ recipe.chef }}</p></a>
    </div>

    <div class="recipe_content">

        <div class="hide_and_seek">
            <h1>Ingredientes</h1>
            <button class="ingredient">ESCONDER</button>
        </div>

        <ul class="ingredient_">
            {% for ingredient in recipe.ingredients %}
                <li>
                    {{ ingredient }}
                </li>
            {% endfor %}
        </ul>

        <div class="hide_and_seek">
            <h1>Modo de preparo</h1>
            <button class="preparation">ESCONDER</button>
        </div>

        <ul class="preparation_">
            {% for step in recipe.preparation %}
                <li>
                    {{ step }}
                </li>
            {% endfor %}
        </ul>

        <div class="hide_and_seek">
            <h1>Informações adicionais</h1>
            <button class="information">ESCONDER</button>
        </div>

        <p class="information_">
            {{ recipe.information }}
        </p>

    </div>

    
{% endblock %}