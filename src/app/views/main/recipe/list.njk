{% extends "main/layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}

    <div class="cards">
        {% for recipe in recipes %}
            <div class="card" id="{{ recipe.id }}">
                <a href="/recipes/{{ recipe.id }}"><img src="{{ recipe.src }}" alt="{{ recipe.title }}"></a>
                <h1>{{ recipe.title }}</h1>
                <a href="/chefs/{{recipe.chef_id}}">
                    <p>por
                        {{ recipe.chef_name }}</p>
                </a>
            </div>
        {% endfor %}
    </div>

{% endblock %}