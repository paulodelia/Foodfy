{% extends "admin/layout.njk" %}

{% block head %}
    <title>Chefs - Foodfy</title>
{% endblock %}

{% block content %}
    <section>
        <div class="title-btn">
            <h1>Chef:
                {{ chef.name }}
            </h1>
            <span>
                <a href="/admin/chefs/{{ chef.id }}/edit">
                    <button>Editar chef</button>
                </a>
            </span>
        </div>

        <div class="card chef">
            <img src="{{ chef.image }}" alt="{{ chef.name }}">
            <h1>{{ chef.name }}</h1>
            {% if total_recipes == 1 %}
                <p>1 receita</p>
            {% else %}
                <p>{{total_recipes}}
                    receitas</p>
            {% endif %}
        </div>

        <h1>Receitas</h1>
        <div class="cards">
            {% for recipe in recipes %}
                <div class="card" id="{{ recipe.id }}">
                    <a href="/admin/recipes/{{ recipe.id }}"><img src="{{ recipe.src }}" alt="{{ recipe.title }}"></a>
                    <div>
                        <h1>{{ recipe.title }}</h1>
                        <p>por
                            {{ chef.name }}</p>
                        <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}