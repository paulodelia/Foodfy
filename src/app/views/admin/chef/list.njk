{% extends "admin/layout.njk" %}

{% block content %}
    <section>
        <div class="title-btn">
            <h1>Gerenciar chefs</h1>
            <span>
                <a href="/admin/chefs/create"><button>Criar chef</button></a>
            </span>
        </div>

        <div class="cards chefs">
            {% for chef in chefs %}
                <div class="card" id="{{ chef.id }}">
                    <a href="/admin/chefs/{{ chef.id }}"><img src="{{ chef.avatar_url }}" alt="{{ chef.name }}"></a>
                    <div>
                        <h1>{{ chef.name }}</h1>
                        <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}