{% extends 'session/layout.njk' %}

{% block content %}
  <h2 class="session-title">Esqueceu a Senha?</h2>
  <form action="/session/forgot-password" class="session-form" method="POST">
    <div class="session-input">
      <p>Email</p>
      <div class="input">
        <input type="email" name="email" placeholder="Digite seu email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')" required="required">
      </div>

      <div class="flex-end">
        <button class="forgot-password-button" type="submit">Recuperar</button>
      </div>
    </div>
  </form>
{% endblock content %}